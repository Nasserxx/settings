{
  "editor.fontFamily": "'Fira Code', 'JetBrains Mono', monospace",
  "editor.fontSize": 14,
  "editor.fontWeight": "500", // "400" is normal weight.
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.2,
  // --- Bracket Colorization ---
  // Assigns colors to matching brackets to make them easier to identify.
  "editor.bracketPairColorization.enabled": true,
  // Set font for other parts of the UI
  "terminal.integrated.fontFamily": "'Fira Code', monospace",
  "terminal.integrated.fontSize": 12,
  "debug.console.fontFamily": "'Fira Code', monospace",
  "debug.console.fontSize": 12,
  // --- Chat Font ---
  // Makes the chat font bolder for better readability.
  "chat.editor.fontWeight": "500",
  // --- UI Sizing ---
  // To make the menu and general UI smaller, you can adjust window.zoomLevel.
  // Negative values zoom out (smaller UI), positive values zoom in (larger UI).
  // -0.5 provides a slightly smaller interface. Adjust as you see fit.
  "window.zoomLevel": -0.5,
  // --- Other Quality-of-Life Settings ---
  "explorer.autoReveal": true, // Automatically reveal and select files in the sidebar.
  "editor.formatOnSave": true,
  "files.autoSave": "afterDelay",
  "workbench.iconTheme": "material-icon-theme", // A popular icon theme, install it from marketplace.
  "editor.rulers": [
    80,
    120
  ], // Disabling minimap for more space
  "workbench.startupEditor": "none",
  "explorer.compactFolders": false, // Makes folder structure easier to read
  // To make the sidebar and panels a bit more compact
  "window.density.editorTabHeight": "compact",
  "workbench.tree.indent": 10,
  "workbench.sideBar.location": "right",
  "workbench.activityBar.orientation": "vertical",
  "cursor.composer.shouldAllowCustomModes": true,
  "dotnetAcquisitionExtension.enablePreviewFeatures": true,
  "dotnet.formatting.organizeImportsOnFormat": true,
  "dotnet.server.useOmnisharp": false,
  "csharp.suppressBuildAssetsNotification": true,
  "dotnetAcquisitionExtension.existingDotnetPath": [
    {
      "extensionId": "ms-dotnettools.csharp",
      "path": "/home/user/.dotnet/"
    }
  ],
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.renderSideBySide": false,
  "editor.minimap.enabled": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[csharp]": {
    "editor.defaultFormatter": "csharpier.csharpier-vscode"
  },
  "diffEditor.hideUnchangedRegions.enabled": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.language.brackets": [],
  "workbench.colorCustomizations": {
    // Enhanced bracket pair colorization for eye comfort and clarity
    "editorBracketHighlight.foreground1": "#FFD166", // Soft Amber (outermost)
    "editorBracketHighlight.foreground2": "#06D6A0", // Mint Green
    "editorBracketHighlight.foreground3": "#118AB2", // Calming Blue
    "editorBracketHighlight.foreground4": "#EF476F", // Gentle Pink/Red
    "editorBracketHighlight.foreground5": "#9D4EDD", // Soft Purple
    "editorBracketHighlight.foreground6": "#FFB4A2", // Peach
    "editorBracketHighlight.unexpectedBracket.foreground": "#FF1744", // Strong Red for errors
    // Subtle, low-contrast backgrounds for active bracket pairs (reduce eye strain)
    "editorBracketHighlight.background1": "#FFFBEA", // Light Amber
    "editorBracketHighlight.background2": "#E6FFFA", // Light Mint
    "editorBracketHighlight.background3": "#EAF6FB", // Light Blue
    "editorBracketHighlight.background4": "#FDE2E4", // Light Pink
    "editorBracketHighlight.background5": "#F3E8FF", // Light Purple
    "editorBracketHighlight.background6": "#FFF1E6", // Light Peach
    // Indent guides: soft, non-intrusive for method structure
    "editorIndentGuide.activeBackground1": "#FFD166", // Amber
    "editorIndentGuide.activeBackground2": "#06D6A0", // Mint
    "editorIndentGuide.activeBackground3": "#118AB2", // Blue
    "editorIndentGuide.background1": "#B0BEC5", // Muted Blue-Gray
    "editorIndentGuide.background2": "#B2F7EF", // Very light Mint
    "editorIndentGuide.background3": "#D0E6FA", // Very light Blue
    // Caret and line highlight for focus
    "editorCursor.foreground": "#118AB2", // Blue cursor for visibility
    // Selection highlight: vivid, high-contrast blue for clear visibility of selected text
    "editor.selectionBackground": "#3399FF", // Strong blue for primary selection (WCAG AA contrast)
    "editor.selectionHighlightBackground": "#99CCFF", // Lighter blue for secondary/word highlights
  },
  "debug.onTaskErrors": "showErrors"
}